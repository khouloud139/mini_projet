{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Distination</th>
                <th>Lieudepart</th>
                <th>Datesortie</th>
                <th>Heuredepart</th>
                <th>Type</th>
                <th>Nombreplaces</th>
                <th>Prix</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.Distination }}</td>
                <td>{{ demande.lieudepart }}</td>
                <td>{{ demande.datesortie ? demande.datesortie|date('Y-m-d') : '' }}</td>
                <td>{{ demande.heuredepart ? demande.heuredepart|date('H:i:s') : '' }}</td>
                <td>{{ demande.type }}</td>
                <td>{{ demande.nombreplaces }}</td>
                <td>{{ demande.prix }}</td>
                <td>{{ demande.statut }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'id': demande.id}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
